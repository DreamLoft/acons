<%=bootstrap_form_for(@office_deal) do |form| %>
  <% if office_deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(office_deal.errors.count, "error") %> prohibited this office_deal from being saved:</h2>

      <ul>
      <% office_deal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if (@office_customers.blank?)%>
<div class="field">
  <p>Create acustomer first</p>
</div>
<% else %>
<div class="field">
  <%= form.select(:office_customer_id) do %>
    <% @office_customers.each do |c| -%>
        <%= content_tag(:option, c.name , value: c.id) %>
    <% end %>
  <% end %>
</div>
<% end %>



<% if (@projects.blank? || @apartments.blank?)%>
<div class="field">
  <p>No Apartment is cretaed</p>
</div>
<% else %>
  <div class="field">
    <%= form.select(:apartment_id) do %>
      <% @projects.each do |p| -%>
        <% p.apartments.each do |ap| -%>
          <%= content_tag(:option, p.project_name + " - "+ ap.apartment_name, value: ap.id) %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>

  <div class="field">
    <%= form.number_field :base_price, id: :office_deal_base_price, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :stamp_duty, id: :office_deal_stamp_duty, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :registration_charges, id: :office_deal_registration_charges, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :other_charges, id: :office_deal_other_charges, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :maintenance_charges, id: :office_deal_maintenance_charges, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :parking_charges, id: :office_deal_parking_charges, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :developement_charges, id: :office_deal_developement_charges, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :club_membership_charges, id: :office_deal_club_membership_charges, class:'form-control' , required: true %>
  </div>

  <div class="field">
    <%= form.number_field :furniture_charges, id: :office_deal_furniture_charges, class:'form-control' , required: true %>
  </div>
  <div class="field">
    <%= form.number_field :total_price, id: :office_deal_total_price, class:'form-control' , required: true %>
  </div>
<br>
  <div class="actions">
    <%= form.submit 'Save', :class=> 'btn btn-primary'  %>
  </div>
<% end %>
