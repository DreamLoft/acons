<p id="notice"><%= notice %></p>
<div>
  <%=  bootstrap_form_tag  url: payments_path, method: :get do |f| %>
  <div class="row">
    <div class="col-lg-5">

      Start Date : <input type="date" name= "start_date"  class="form-control">
    </div>
    <div class="col-lg-5">
      End Date : <input type="date" name= "end_date"  class="form-control">
    </div>
    <div class="col-lg-2">
      <br>
        <%= f.submit "Search Payments", class: 'btn btn-primary' %>
    </div>

  </div>
  <% end %>







</div>
<hr>
<%= link_to 'New Payment', new_payment_path, class: 'btn btn-primary' %><br><br>
<table class="table table-hover" >
  <thead>
    <tr>
      <th>Booking</th>
      <th>Amount paid</th>
      <th>Payment Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.booking_id %></td>
        <td><%= payment.amount_paid %></td>
        <td><%= payment.payment_date %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
