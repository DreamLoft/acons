<h1>Construction Stocks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Item name</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @construction_stocks.each do |construction_stock| %>
      <tr>
        <td><%= construction_stock.item_name %></td>
        <td><%= construction_stock.stock_quantity %></td>
        <td><%= link_to 'Show', construction_stock %></td>
        <td><%= link_to 'Edit', edit_construction_stock_path(construction_stock) %></td>
        <td><%= link_to 'Destroy', construction_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Construction Stock', new_construction_stock_path, class:'btn btn-primary' %>
