<h1>Construction Stock Issues</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Construction stock</th>
      <th>Quanity</th>
      <th>Issue date</th>
      <th>Issued to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @construction_stock_issues.each do |construction_stock_issue| %>
      <tr>
        <td><%= construction_stock_issue.construction_stock.item_name %></td>
        <td><%= construction_stock_issue.quanity %></td>
        <td><%= construction_stock_issue.issue_date %></td>
        <td><%= construction_stock_issue.issued_to %></td>
        <td><%= link_to 'Show', construction_stock_issue %></td>
        <td><%= link_to 'Edit', edit_construction_stock_issue_path(construction_stock_issue) %></td>
        <td><%= link_to 'Destroy', construction_stock_issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Construction Stock Issue', new_construction_stock_issue_path, class:'btn btn-primary' %>
