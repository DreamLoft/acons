<%= bootstrap_form_for(@office_customer) do |form| %>
  <% if office_customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(office_customer.errors.count, "error") %> prohibited this office_customer from being saved:</h2>

      <ul>
      <% office_customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, id: :office_customer_name, class:'form-control' ,required: true %>
