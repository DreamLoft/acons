<ul class="nav nav-tabs">
  <li><a href="<%= construction_stocks_path %>">Construction Stock</a></li>
  <li class="active"><a href="<%= construction_stock_fillings_path %>">Construction Stock Filling</a></li>
  <li><a href="<%= construction_stock_issues_path %>">Issue Stock</a></li>
</ul>

<br><br>

<h1>Construction Stock Fillings</h1>
<%= paginate @construction_stock_fillings %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Construction stock</th>
      <th>Quantity</th>
      <th>Filling date</th>
      <th>Accepted by</th>
      <th>Filling location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @construction_stock_fillings.each do |construction_stock_filling| %>
      <tr>
        <td><%= construction_stock_filling.construction_stock.item_name %></td>
        <td><%= construction_stock_filling.quantity %></td>
        <td><%= construction_stock_filling.filling_date %></td>
        <td><%= construction_stock_filling.accepted_by %></td>
        <td><%= construction_stock_filling.filling_location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Construction Stock Filling', new_construction_stock_filling_path, class:'btn btn-primary' %>
