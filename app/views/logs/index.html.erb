<p id="notice"><%= notice %></p>
<%= link_to 'New Log', new_log_path, class: 'btn btn-primary' %>
<h1>Logs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Guest</th>
      <th>Check in time</th>
      <th>Check out time</th>
      <th>Booking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.guest %></td>
        <td><%= log.check_in_time %></td>
        <td><%= log.check_out_time %></td>
        <td><%= log.booking %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
