<%= link_to 'Add New Enquiry', new_guest_path, class: 'btn btn-primary' %><br><br>
<hr>
<div>
  <div class="row">
    <div class="col-lg-10">
      <%=  bootstrap_form_tag  url: guests_path, method: :get do |f| %>
      <div class="input-group">
        <span class="input-group-btn">
          <input type="text" name= "guest_name" placeholder= "Enter Guest name you want to search here"  class="form-control"> <br>
        <%= f.submit "Search" %>
      </span>
      </div>
      <% end %>
    </div>
  </div><br>
<div class="row">
    <div class="col-lg-10">
      <%=  bootstrap_form_tag  url: guests_path, method: :get do |f| %>
      <div class="input-group">
        <span class="input-group-btn">
          <input type="tel" name= "guest_mobile_number" placeholder= "Enter Guest Mobile No. you want to search here"  class="form-control"> 
        <%= f.submit "Search" %>
      </span>
      </div>
      <% end %>
    </div>




  </div>

</div>

<hr>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Mobile</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @guests.each do |guest| %>
    <tr>
      <td><%= guest.name %></td>
      <td><%= guest.mobile %></td>
      <td><%= guest.email %></td>
      <td><%= link_to 'Show', guest %></td>
      <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
      <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>

</table>
