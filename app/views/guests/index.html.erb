
<%= link_to 'Add New Guest', new_guest_path, class: 'btn btn-primary' %><br><br>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Mobile</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @guests.each do |guest| %>
    <tr>
      <td><%= guest.name %></td>
      <td><%= guest.mobile %></td>
      <td><%= guest.email %></td>
      <td><%= link_to 'Show', guest %></td>
      <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
      <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>

</table>
