
<p>
  <strong>Name:</strong>
  <%= @guest.name %> |
  <strong>Mobile:</strong>
  <%= @guest.mobile %> |
  <strong>Email:</strong>
  <%= @guest.email %>
</p>
<hr>
<h3>Bookings</h3>
<% if @bookings.present? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Booking Date</th>
        <th>Total Guests</th>
        <th>Status</th>
        <th>From</th>
        <th>Till</th>
        <th>Booking Amount</th>
        <th>Paid Amount</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
        <td><%= booking.booking_date %></td>
        <td><%= booking.total_guests %></td>
        <td><%= booking.booking_status %></td>
        <td><%= booking.booked_from %></td>
        <td><%= booking.booked_till %></td>
        <td><%= booking.booking_amount %></td>
        <td><%= booking.paid_amount %></td>
        <td><%= link_to 'Show', guest_booking_path(booking.guest_id, booking.id) %></td>
        <td><%= link_to 'Edit', edit_guest_booking_path(booking.guest_id, booking.id) %></td>
        <td><%= link_to 'Room Service', guest_booking_room_services_path(booking.guest_id, booking.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<hr>
<%= link_to 'Edit', edit_guest_path(@guest) %> |
<%= link_to 'Back', guests_path %> |
<%= link_to 'New Booking', new_guest_booking_path(@guest.id ) , class: "btn btn-primary" %>
<hr>