<ul class="nav nav-tabs">
  <li class="active"><a href="<%= stocks_path %>">Stock Filling</a></li>
  <li><a href="<%= stock_items_path %>">Stock Items</a></li>
</ul>

<br><br>


<%= link_to 'New Stock', new_stock_path, class: 'btn btn-primary' %><br><br>
<h1>Stocks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Stock item</th>
      <th>Filling date</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.stock_item.name %></td>
        <td><%= stock.filling_date %></td>
        <td><%= stock.quantity %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
