<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>Apartment name</th>
      <th>Carpet area</th>
      <th>Build up</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.apartment_name %></td>
        <td><%= apartment.carpet_area %></td>
        <td><%= apartment.build_up %></td>
        <td><%= apartment.project %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path, class: 'btn btn-primary' %>
