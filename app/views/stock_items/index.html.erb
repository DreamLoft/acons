<%= link_to 'New Stock Item', new_stock_item_path, class: 'btn btn-primary' %><br><br>

<p id="notice"><%= notice %></p>
<h1>Stock Items</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @stock_items.each do |stock_item| %>
      <tr>
        <td><%= stock_item.name %></td>
        <td><%= stock_item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

