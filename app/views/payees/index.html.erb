<p id="notice"><%= notice %></p>

<h1>Payees</h1>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>Payee category</th>
      <th>Payee name</th>
      <th>Payee account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payees.each do |payee| %>
      <tr>
        <td><%= payee.payee_category.category_name %></td>
        <td><%= payee.payee_name %></td>
        <td><%= payee.payee_account %></td>
        <td><%= link_to 'Show', payee %></td>
        <td><%= link_to 'Edit', edit_payee_path(payee) %></td>
        <td><%= link_to 'Destroy', payee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payee', new_payee_path , class: 'btn btn-primary' %>
